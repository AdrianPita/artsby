<%= form_for @painting, :html => { multipart: true } do |f| %>
<% if @painting.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @painting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
 
<div class="well">
  
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :picture %>
    <%= f.file_field :picture %>
    <%= f.submit "Save" %>
  <% end %>
</div>

